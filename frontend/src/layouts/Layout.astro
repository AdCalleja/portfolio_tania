---
// https://docs.astro.build/en/guides/view-transitions/
import { ClientRouter } from "astro:transitions";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="viewport"
      content="width=device-width"
    />
    <link
      rel="icon"
      type="image/svg+xml"
      href="/favicon.svg"
    />
    <meta
      name="generator"
      content={Astro.generator}
    />

    <!-- Google fonts -->
    <link
      rel="preconnect"
      href="https://fonts.googleapis.com"
    />
    <link
      rel="preconnect"
      href="https://fonts.gstatic.com"
      crossorigin
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:wght@400;500;600;700&family=JetBrains+Mono:wght@500;700&family=Source+Serif+4:wght@400;600&family=Space+Grotesk:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />

    <title>{title}</title>
    <ClientRouter />
  </head>
  <body>
    <div class="container">
      <header class="header">
        <div class="header__brand">
          <a
            class="header__title"
            href="/"
            >Tania</a
          >
          <span class="header__subtitle">Costume designer</span>
        </div>
        <div class="header__note">Selected works / Available for collaborations</div>
      </header>
      <main>
        <slot />
      </main>
      <footer class="footer">
        <p class="footer__text">
          Made with <svg
            data-sanity-icon="heart-filled"
            width="1em"
            height="1em"
            viewBox="0 0 25 25"
            fill="none"
            xmlns="http://www.w3.org/2000/svg"
            ><path
              d="M17 16C15.8 17.3235 12.5 20.5 12.5 20.5C12.5 20.5 9.2 17.3235 8 16C5.2 12.9118 4.5 11.7059 4.5 9.5C4.5 7.29412 6.1 5.5 8.5 5.5C10.5 5.5 11.7 6.82353 12.5 8.14706C13.3 6.82353 14.5 5.5 16.5 5.5C18.9 5.5 20.5 7.29412 20.5 9.5C20.5 11.7059 19.8 12.9118 17 16Z"
              fill="currentColor"
              stroke="currentColor"
              stroke-width="1.2"
            ></path></svg
          > for storytelling in fabric
        </p>
      </footer>
    </div>
  </body>
</html>

<style>
  .container {
    margin: 0 auto;
  }

  main {
    margin-top: 70px;
  }

  .header {
    display: flex;
    flex-direction: column;
    gap: var(--space-2);
    padding: var(--space-3) var(--space-3);
    border-bottom: 1px solid rgba(28, 22, 20, 0.1);
    z-index: 10;
    background: rgba(255, 255, 255, 0.85);
    backdrop-filter: blur(8px);
    position: fixed;
    left: 0;
    right: 0;
    top: 0;

    & .header__brand {
      display: flex;
      align-items: baseline;
      gap: var(--space-3);
    }

    & .header__title {
      font-family: var(--font-family-display);
      font-weight: 600;
      font-size: 28px;
      letter-spacing: -0.02em;
      margin: 0;
      text-decoration: none;
      color: var(--ink-900);
    }

    & .header__subtitle {
      font-family: var(--font-family-mono);
      font-size: 11px;
      text-transform: uppercase;
      letter-spacing: 0.2em;
      color: var(--gray-500);
    }

    & .header__note {
      font-family: var(--font-family-serif);
      font-size: 14px;
      color: var(--gray-700);
    }
  }

  .footer {
    display: flex;
    justify-content: flex-end;
    padding: 0 var(--space-3) var(--space-4);

    & .footer__text {
      font-size: 12px;
      line-height: 1.4;
      display: flex;
      align-items: center;
      gap: 2px;
      font-family: var(--font-family-mono);
      text-transform: uppercase;
      letter-spacing: 0.14em;
      color: var(--gray-500);
    }
  }

  @media (min-width: 575px) {
    .container {
      max-width: 980px;
      padding: 0 var(--space-4);
    }

    main {
      margin-top: unset;
    }

    .header {
      position: unset;
      border-bottom: none;
      margin: var(--space-4) 0 var(--space-3);
      padding: 0;
      background: none;
      backdrop-filter: none;

      & .header__title {
        font-size: 36px;
      }
    }

    .footer {
      margin: var(--space-5) 0;
    }
  }
</style>

<style is:global>
  :root {
    --space-0: 0;
    --space-1: 4px;
    --space-2: 8px;
    --space-3: 12px;
    --space-4: 20px;
    --space-5: 32px;
    --space-6: 52px;
    --space-7: 84px;
    --space-8: 136px;
    --space-9: 220px;

    --font-family-sans: "Space Grotesk";
    --font-family-serif: "Source Serif 4";
    --font-family-display: "Cormorant Garamond";
    --font-family-mono: "JetBrains Mono";

    --font-size-0: 12px;
    --font-size-1: 14px;
    --font-size-2: 16px;
    --font-size-3: 18px;
    --font-size-4: 20px;
    --font-size-5: 24px;
    --font-size-6: 30px;
    --font-size-7: 36px;
    --font-size-8: 48px;
    --font-size-9: 60px;
    --font-size-10: 72px;

    --line-height-0: 16px;
    --line-height-1: 20px;
    --line-height-2: 24px;
    --line-height-3: 28px;
    --line-height-4: 28px;
    --line-height-5: 32px;
    --line-height-6: 36px;
    --line-height-7: 40px;
    --line-height-8: 48px;
    --line-height-9: 60px;
    --line-height-10: 72px;
    --line-height-11: 96px;
    --line-height-12: 128px;

    --white: #ffffff;
    --ink-900: #1f1416;
    --ink-700: #3b2a2d;
    --gray-500: #6b5a59;
    --gray-600: #7a6c6b;
    --gray-700: #5c4f4e;
    --gray-200: rgba(44, 33, 34, 0.12);
    --accent-700: #8b4326;
    --accent-500: #b56a4a;
    --sand-100: #f8f2ec;
    --sand-200: #efe6dd;
  }

  html {
    background-color: var(--sand-100);
    font-family: var(--font-family-sans), sans-serif;
    text-size-adjust: 100%;
  }

  body {
    margin: 0;
    color: var(--ink-900);
    background:
      radial-gradient(circle at 20% 10%, rgba(181, 106, 74, 0.15), transparent 42%),
      radial-gradient(circle at 80% 0%, rgba(59, 42, 45, 0.12), transparent 45%),
      radial-gradient(circle at 50% 80%, rgba(139, 67, 38, 0.12), transparent 50%),
      var(--sand-100);
    min-height: 100vh;
  }

  body::before {
    content: "";
    position: fixed;
    inset: 0;
    background-image: linear-gradient(
        120deg,
        rgba(255, 255, 255, 0.35),
        rgba(255, 255, 255, 0)
      );
    opacity: 0.6;
    pointer-events: none;
    z-index: -1;
  }

  * {
    box-sizing: border-box;
  }
</style>
