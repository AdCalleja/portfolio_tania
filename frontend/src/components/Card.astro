---
import { urlFor } from "../utils/image";
import type { Project } from "../utils/sanity";

interface Props {
  project: Project;
}

const { project } = Astro.props;
---

<article class="card">
  <div class="card__media">
    <div class="card__halo"></div>
    {
      project.heroImage ? (
        <img
          class="card__cover"
          src={urlFor(project.heroImage).width(900).height(1200).url()}
          alt={project.heroImage.alt || project.title || ""}
          loading="lazy"
        />
      ) : (
        <div class="card__cover--none" />
      )
    }
  </div>
  <div class="card__container">
    <p class="card__meta">
      <span>{project.production || "Independent project"}</span>
      {project.year ? <span>/ {project.year}</span> : null}
    </p>
    <h3 class="card__title">
      <a
        class="card__link"
        href={`/project/${project.slug.current}`}
      >
        {project.title}
      </a>
    </h3>
    {project.excerpt ? <p class="card__excerpt">{project.excerpt}</p> : null}
    {project.role ? <p class="card__role">{project.role}</p> : null}
    <a
      class="card__button"
      href={`/project/${project.slug.current}`}
    >
      View project
    </a>
  </div>
</article>

<style>
  .card {
    display: grid;
    gap: var(--space-4);
    padding: var(--space-4);
    position: relative;
    border-radius: 32px;
    border: 1px solid rgba(201, 216, 187, 0.55);
    background:
      radial-gradient(circle at 80% 20%, rgba(255, 255, 255, 0.9), rgba(255, 255, 255, 0) 55%),
      linear-gradient(180deg, rgba(255, 255, 255, 0.82), rgba(244, 244, 236, 0.7));
    backdrop-filter: blur(6px);
    box-shadow: 0 20px 50px rgba(31, 32, 25, 0.1);
    animation: card-rise 0.7s ease forwards;
    opacity: 0;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    overflow: hidden;

    &::before {
      content: "";
      position: absolute;
      width: 220px;
      height: 220px;
      right: -40px;
      top: -40px;
      border-radius: 999px;
      background: radial-gradient(circle, rgba(147, 170, 122, 0.35), transparent 70%);
      opacity: 0.7;
      pointer-events: none;
    }

    & .card__container {
      margin: 0;
      display: grid;
      gap: var(--space-2);
    }

    & .card__media {
      position: relative;
      display: grid;
      place-items: center;
      min-height: 360px;
    }

    & .card__halo {
      position: absolute;
      width: 80%;
      height: 80%;
      border-radius: 999px;
      background: linear-gradient(140deg, rgba(229, 237, 220, 0.9), rgba(201, 216, 187, 0.6));
      opacity: 0.8;
      filter: blur(0.5px);
    }

    & .card__cover {
      width: min(320px, 70vw);
      height: 420px;
      object-fit: cover;
      border-radius: 999px;
      box-shadow: 0 20px 45px rgba(31, 32, 25, 0.18);
      position: relative;
      z-index: 1;
      border: 8px solid rgba(255, 255, 255, 0.7);
    }

    & .card__cover--none {
      width: min(320px, 70vw);
      height: 420px;
      border-radius: 999px;
      background: linear-gradient(135deg, #1b2216, #3f5a35);
      border: 8px solid rgba(255, 255, 255, 0.7);
      position: relative;
      z-index: 1;
    }

    & .card__title {
      font-family: var(--font-family-display);
      font-weight: 600;
      font-size: clamp(26px, 3vw, 38px);
      line-height: 1.1;
      letter-spacing: -0.02em;
      margin: var(--space-2) 0 var(--space-1);
    }

    & .card__excerpt {
      font-family: var(--font-family-serif);
      font-weight: 400;
      font-size: 17px;
      line-height: 1.7;
      margin: 0 0 var(--space-2);
      color: var(--gray-700);
    }

    & .card__meta {
      display: flex;
      gap: var(--space-2);
      font-family: var(--font-family-mono);
      text-transform: uppercase;
      font-size: 12px;
      letter-spacing: 0.12em;
      color: var(--gray-500);
      margin: 0;
    }

    & .card__role {
      font-family: var(--font-family-mono);
      font-size: 13px;
      letter-spacing: 0.08em;
      text-transform: uppercase;
      color: var(--accent-700);
      margin: 0;
    }

    & .card__button {
      justify-self: start;
      text-decoration: none;
      font-family: var(--font-family-mono);
      font-size: 11px;
      letter-spacing: 0.24em;
      text-transform: uppercase;
      padding: 10px 18px;
      border-radius: 999px;
      border: 1px solid rgba(63, 90, 53, 0.3);
      color: var(--ink-900);
      background: rgba(255, 255, 255, 0.8);
      box-shadow: 0 12px 30px rgba(63, 90, 53, 0.12);
      transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

    & .card__button:hover {
      transform: translateY(-2px);
      box-shadow: 0 16px 36px rgba(63, 90, 53, 0.18);
    }

    & .card__link {
      color: var(--ink-900);
      text-decoration: none;

      &:hover {
        opacity: 0.85;
        transition: 0.2s ease;
      }

      &::before {
        content: "";
        position: absolute;
        inset: 0;
      }
    }

    &:nth-child(1) {
      animation-delay: 0.05s;
    }

    &:nth-child(2) {
      animation-delay: 0.12s;
    }

    &:nth-child(3) {
      animation-delay: 0.18s;
    }

    &:hover {
      transform: translateY(-6px);
      box-shadow: 0 26px 60px rgba(31, 32, 25, 0.16);
    }
  }

  @media (min-width: 575px) {
    .card {
      padding: var(--space-4);
    }
  }

  @media (max-width: 600px) {
    .card {
      & .card__cover,
      & .card__cover--none {
        height: 340px;
      }
    }
  }

  @media (min-width: 820px) {
    .card {
      grid-template-columns: minmax(0, 0.9fr) minmax(0, 1.1fr);
      align-items: center;
      gap: var(--space-6);
      padding: var(--space-5);
    }

    .card:nth-child(even) {
      grid-template-columns: minmax(0, 1.1fr) minmax(0, 0.9fr);
    }

    .card:nth-child(even) .card__media {
      order: 2;
    }

    .card:nth-child(even) .card__container {
      order: 1;
    }
  }

  @media (min-width: 980px) {
    .card {
      & .card__cover,
      & .card__cover--none {
        width: 360px;
        height: 480px;
      }
    }
  }

  @keyframes card-rise {
    from {
      opacity: 0;
      transform: translateY(24px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>
